<% if (user) { %>
    <h2>Welcome <%= locals.account_firstname %></h2>
  
    <p><a href="/account/update/<%= user.account_id %>">Update account information</a></p>
  
    <% if (user.account_type === 'Employee' || user.account_type === 'Admin') { %>
      <h3>Inventory Management</h3>
      <p><a href="/inv">Manage Inventory</a></p>
    <% } %>
  
  <% } else { %>
    <p>Please <a href="/account/login">log in</a> to view account details.</p>
  <% } %>
  