<% if (title) { %>
    <h1><%= title %></h1>
  <% } %>
  
  <%- messages() %>
  
  <div id="updateContainer">
  
    <form id="accountUpdateForm" action="/account/update/<%= accountData.account_id %>" method="post">
      <fieldset>
        <legend>Account Update</legend>
  
        <label for="firstname">First Name</label>
        <input 
          type="text" 
          id="firstname" 
          name="account_firstname" 
          required 
          value="<%= accountData.account_firstname %>" 
          autocomplete="given-name"
        >
  
        <label for="lastname">Last Name</label>
        <input 
          type="text" 
          id="lastname" 
          name="account_lastname" 
          required 
          value="<%= accountData.account_lastname %>" 
          autocomplete="family-name"
        >
  
        <label for="email">Email</label>
        <input 
          type="email" 
          id="email" 
          name="account_email" 
          required 
          value="<%= accountData.account_email %>" 
          autocomplete="email"
        >
  
        <input type="hidden" name="account_id" value="<%= accountData.account_id %>">
  
        <button type="submit">Update Account</button>
      </fieldset>
    </form>
  
    <form id="changePasswordForm" action="/account/updatePassword" method="post">
      <fieldset>
        <legend>Change Password</legend>
  
        <label for="currentPassword">Current Password</label>
        <input 
          type="password" 
          id="currentPassword" 
          name="current_password" 
          required 
          autocomplete="current-password"
        >
  
        <label for="newPassword">New Password</label>
        <input 
          type="password" 
          id="newPassword" 
          name="new_password" 
          required 
          pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" 
          autocomplete="new-password"
        >
        <div><i>Passwords must be at least 12 characters, include 1 capital letter, 1 number, and 1 special character.</i></div>
  
        <button type="submit">Change Password</button>
      </fieldset>
    </form>
  
  </div>
  